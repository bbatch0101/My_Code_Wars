Complete the solution so that it reverses the string passed into it.

'world'  =>  'dlrow'

// Code
function solution(str){
  let splitStr = str.split('');
  return splitStr.reverse().join('');
};

solution('world');
// => 'dlrow'
solution('hello');
// => 'olleh'
solution('');
// => ''
solution('h');
// => 'h'
